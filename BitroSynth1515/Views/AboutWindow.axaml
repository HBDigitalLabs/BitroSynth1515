<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="500"
        x:Class="BitroSynth1515.AboutWindow"
        Width="500" Height="500"
		MinWidth="400" MinHeight="400"
        Icon="avares://BitroSynth1515/Assets/icons/About_Icon.ico"
        Title="About">

    <Grid RowDefinitions="Auto,*,Auto">
        <Grid.Background>
            <ImageBrush Stretch="Fill" Source="avares://BitroSynth1515/Assets/images/Gray_Gradient.png" />
        </Grid.Background>

        <TextBlock
            Grid.Row="0"
            Text="BitroSynth1515"
            FontSize="28"
            FontWeight="Bold"
            Foreground="{DynamicResource ElectricBlueColor}"
            HorizontalAlignment="Center"
            Margin="0,20,0,10" />

        <Border
            Grid.Row="1"
            Margin="20"
            Padding="15"
            CornerRadius="10"
            Background="#66000000">
            <StackPanel>
                <TextBlock
                    Text="Copyright (c) 2025 HBDigitalLabs"
                    FontSize="16"
                    Foreground="White"
                    TextWrapping="Wrap"
                    TextAlignment="Center"
                    Margin="0,0,0,10" />
                <TextBox
                    x:Name="infoLabel"
                    IsHitTestVisible="False"
                    BorderThickness="0"
                    TextWrapping="Wrap"
                    AcceptsReturn="True"
                    IsReadOnly="True"
                    FontSize="15"
                    Background="Transparent"
                    Foreground="White" />
            </StackPanel>
        </Border>

        <Button
            Grid.Row="2"
            Click="CloseWindow"
            Content="Close"
            Width="100"
            Height="40"
            FontSize="16"
            HorizontalAlignment="Center"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Margin="0,10">
            <Button.Styles>
                <Style Selector="Button">
                    <Setter Property="Background" Value="#444" />
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="CornerRadius" Value="8" />
                </Style>
                <Style Selector="Button:pointerover">
                    <Setter Property="Background" Value="#666" />
                </Style>
                <Style Selector="Button:pressed">
                    <Setter Property="Background" Value="#222" />
                </Style>
            </Button.Styles>
        </Button>
    </Grid>
</Window>
