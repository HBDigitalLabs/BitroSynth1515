<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="700" d:DesignHeight="600"
        x:Class="BitroSynth1515.CreateNoteWithGUIWindow"
        MinWidth="550" MinHeight="450"
        Width ="700" Height="600"
        Icon="avares://BitroSynth1515/Assets/icons/CreateNoteWithGUI_Icon.ico"
        Title="Create Note With GUI">

    <!-- Top-level grid: left sidebar + main content -->
    <Grid ColumnDefinitions="Auto,*">

        <!-- LEFT SIDEBAR (DockPanel) START -->
        <DockPanel Grid.Column="0" Width="200">
            <DockPanel.Background>
                <ImageBrush Stretch="Fill" Source="avares://BitroSynth1515/Assets/images/Vertical_Dark_Gray_Gradient.png" />
            </DockPanel.Background>

            <DockPanel.Styles>
                <Style Selector="TextBox">
                    <Setter Property="Margin" Value="10"/>
                    <Setter Property="Foreground" Value="#E6EFF2"/>
                    <Setter Property="Background" Value="#0B0F14"/>
                    <Setter Property="BorderBrush" Value="#2B3340"/>
                </Style>

                <Style Selector="TextBox:pointerover">
                    <Setter Property="BorderBrush" Value="{DynamicResource ElectricBlueColor}"/>
                    <Setter Property="Background" Value="#0E141A"/>
                </Style>

                <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
                    <Setter Property="BorderBrush" Value="{DynamicResource ElectricBlueColor}"/>
                    <Setter Property="BorderThickness" Value="2"/>
                    <Setter Property="Background" Value="#0B0F14"/>
                </Style>

                <Style Selector="TextBox:focus">
                    <Setter Property="BorderBrush" Value="{DynamicResource ElectricBlueColor}"/>
                    <Setter Property="BorderThickness" Value="2"/>
                    <Setter Property="Background" Value="#0B0F14"/>
                    <Setter Property="Foreground" Value="#E6EFF2"/>
                </Style>

                <Style Selector="ComboBox">
                    <Setter Property="Background" Value="Black"/>
                    <Setter Property="Foreground" Value="{DynamicResource ElectricBlueColor}"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="Width" Value="180"/>
                    <Setter Property="MaxDropDownHeight" Value="200" />
                </Style>

                <Style Selector="ComboBoxItem">
                    <Setter Property="Background" Value="Black"/>
                    <Setter Property="Foreground" Value="{DynamicResource ElectricBlueColor}"/>
                    <Setter Property="Padding" Value="5"/>
                </Style>
                <Style Selector="ComboBoxItem:pointerover">
                    <Setter Property="Background" Value="#444"/>
                    <Setter Property="Foreground" Value="White"/>
                </Style>
                <Style Selector="ComboBoxItem:selected">
                    <Setter Property="Background" Value="Cyan"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Style>
            </DockPanel.Styles>

            <ComboBox 
                DockPanel.Dock="Top"
                Margin="10"
                x:Name="notes"
                BorderBrush="Gray"
                BorderThickness="1"
            />
            
            <TextBox
                DockPanel.Dock="Top" 
                x:Name="millisecondsTextBox"  
                Watermark="Milliseconds" /> 

            <TextBox 
                DockPanel.Dock="Top" 
                x:Name="gainTextBox"  
                Watermark="Gain" />

            <ComboBox 
                DockPanel.Dock="Top"
                Margin="10"
                x:Name="waves" 
                SelectedIndex="0"
                FontSize="14"
                BorderBrush="Gray"
                BorderThickness="1"
            >
                <ComboBoxItem>SINE</ComboBoxItem>
                <ComboBoxItem>NOISE</ComboBoxItem>
                <ComboBoxItem>PINK</ComboBoxItem>
                <ComboBoxItem>TRI</ComboBoxItem>
                <ComboBoxItem>SQ</ComboBoxItem>
                <ComboBoxItem>SAW</ComboBoxItem>
                <ComboBoxItem>VOID</ComboBoxItem>
            </ComboBox>

            <StackPanel DockPanel.Dock="Top" Margin="10">
                <StackPanel.Styles>
                    <Style Selector="RadioButton">
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontSize" Value="13"/>
                        <Setter Property="Margin" Value="0,3"/>
                    </Style>

                    <Style Selector="RadioButton:pointerover /template/ContentPresenter">
                        <Setter Property="Background" Value="#222"/>
                        <Setter Property="Foreground" Value="{DynamicResource ElectricBlueColor}"/>
                    </Style>

                    <Style Selector="RadioButton:checked /template/ContentPresenter">
                        <Setter Property="Background" Value="{DynamicResource ElectricBlueColor}"/>
                        <Setter Property="Foreground" Value="Black"/>
                    </Style>
                </StackPanel.Styles>

                <TextBlock 
                    Foreground="{DynamicResource ElectricBlueColor}" 
                    FontSize="14" 
                    FontWeight="Bold"
                    Margin="0 10 0 5"
                    Text="Channel to be added"
                />
                <RadioButton x:Name="channel_1" Content="Channel-1"/>
                <RadioButton x:Name="channel_2" Content="Channel-2"/>
                <RadioButton x:Name="channel_3" Content="Channel-3"/>
                <RadioButton x:Name="channel_4" Content="Channel-4"/>
            </StackPanel>
        </DockPanel>
        <!-- LEFT SIDEBAR (DockPanel) END -->

        <!-- MAIN CONTENT BORDER (Grid.Column=1) START -->
        <Border BorderThickness="3,0" BorderBrush="Black" Grid.Column="1">
            <Grid Background="Black" RowDefinitions="*,Auto">

                <!-- TOP DOCK AREA (wave + edge gradients) START -->
                <DockPanel Grid.Row="0">
                    <Border BorderThickness="0,3,0,0" BorderBrush="Black" DockPanel.Dock="Top" Height="30">
                        <Image Stretch="Fill" Source="avares://BitroSynth1515/Assets/images/Gray_Gradient.png"/>
                    </Border>

                    <Border BorderThickness="0,3,0,0" BorderBrush="Black" DockPanel.Dock="Left" Width="30">
                        <Image Stretch="Fill" Source="avares://BitroSynth1515/Assets/images/Gray_Gradient.png"/>
                    </Border>

                    <Border BorderThickness="0,3,0,0" BorderBrush="Black" DockPanel.Dock="Right" Width="30">
                        <Image Stretch="Fill" Source="avares://BitroSynth1515/Assets/images/Gray_Gradient.png"/>
                    </Border>

                    <Border BorderThickness="3,3,3,0" BorderBrush="Black">
                        <Canvas Height="200" x:Name="waveCanvas" Background="Black">
                            <Path x:Name="wavePath" Stroke="{DynamicResource ElectricBlueColor}" StrokeThickness="1"/>
                        </Canvas>
                    </Border>
                </DockPanel>
                <!-- TOP DOCK AREA (wave + edge gradients) END -->

                <!-- LOWER GRID (RowDefinitions="Auto,*,Auto") START -->
                <Grid RowDefinitions="Auto,*,Auto" Grid.Row="1" MinHeight="200">

                    <!-- top strip -->
                    <Border Grid.Row="0" Height="30" BorderThickness="0,0,0,3" BorderBrush="Black">
                        <Border.Background>
                            <ImageBrush Stretch="Fill" Source="avares://BitroSynth1515/Assets/images/Gray_Gradient.png"/>
                        </Border.Background>
                    </Border>

                    <!-- main content area -->
                    <Border Grid.Row="1" Padding="8">
                        <Border.Background>
                            <ImageBrush Stretch="Fill" Source="avares://BitroSynth1515/Assets/images/Dark_Gray_Gradient.png" />
                        </Border.Background>

                        <!-- GRID WRAPPER (contains styles + layout grid) START -->
                        <Grid>
                            <!-- Preserve existing styles exactly as-is -->
                            <Grid.Styles>
                                <Style Selector="Button">
                                    <Setter Property="Background" Value="Black"/>
                                    <Setter Property="Foreground" Value="{DynamicResource ElectricBlueColor}"/>
                                    <Setter Property="BorderBrush" Value="{DynamicResource ElectricBlueColor}"/>
                                    <Setter Property="BorderThickness" Value="2"/>
                                    <Setter Property="Padding" Value="8,6"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="MinHeight" Value="40"/>
                                    <Setter Property="MinWidth" Value="100"/>
                                </Style>

                                <Style Selector="Button:pointerover">
                                    <Setter Property="Background" Value="#101010"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Style>

                                <Style Selector="Button:pointerover /template/ContentPresenter">
                                    <Setter Property="Background" Value="#080808"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="BorderBrush" Value="White"/>
                                    <Setter Property="Opacity" Value="1.0"/>
                                </Style>

                                <Style Selector="Button:pressed">
                                    <Setter Property="Background" Value="#202020"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Style>
                            </Grid.Styles>

                            <!-- LAYOUT GRID: 3 columns (left buttons, center flexible, right Draw) START -->
                            <Grid ColumnDefinitions="Auto,*,Auto" VerticalAlignment="Center">

                                <!-- LEFT: 2x2 buttons grid START -->
                                <Grid Grid.Column="0" MinWidth="220">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Button Grid.Row="0" Grid.Column="0" Margin="6" Click="AddNote">Add Note</Button>
                                    <Button Grid.Row="1" Grid.Column="0" Margin="6" Click="DeleteNote">Delete Note</Button>
                                    <Button Grid.Row="0" Grid.Column="1" Margin="6" Click="PlaySound">Play Sound</Button>
                                    <Button Grid.Row="1" Grid.Column="1" Margin="6" Click="StopSound">Stop Sound</Button>
                                </Grid>
                                <!-- LEFT: 2x2 buttons grid END -->


                                <!-- RIGHT: Draw button START -->
                                <Button Grid.Column="2"
                                        Width="100" Height="110"
                                        Margin="6"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        FontSize="20"
                                        Click="ReDraw"
                                >Draw</Button>
                                <!-- RIGHT: Draw button END -->

                            </Grid>
                            <!-- LAYOUT GRID: 3 columns END -->

                        </Grid>
                        <!-- GRID WRAPPER END -->

                    </Border>
                    <!-- main content area END -->

                    <!-- bottom strip -->
                    <Border Grid.Row="2" Height="30" BorderThickness="0,3,0,0" BorderBrush="Black">
                        <Border.Background>
                            <ImageBrush Stretch="Fill" Source="avares://BitroSynth1515/Assets/images/Gray_Gradient.png"/>
                        </Border.Background>
                    </Border>

                </Grid>
                <!-- LOWER GRID (RowDefinitions="Auto,*,Auto") END -->

            </Grid>
        </Border>
        <!-- MAIN CONTENT BORDER (Grid.Column=1) END -->

    </Grid>
</Window>
