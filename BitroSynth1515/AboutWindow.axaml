<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="500"
        x:Class="BitroSynth1515.AboutWindow"
        Width ="500" Height="500"
		Icon="avares:assets/icons/About_Icon.ico"
		Title="About">
	
	<Grid RowDefinitions="Auto,Auto,*,Auto">
		<Grid.Background>
			<ImageBrush Stretch="Fill" Source="avares:/assets/images/Gray_Gradient.png" />
		</Grid.Background>

	

		<Label 
			Grid.Row="0"
			FontSize="25"
			Margin="10,15,0,0"
			Foreground="White"
		>Copyright (c) 2025 HBDigitalLabs</Label>
		
		<TextBox 
			x:Name="infoLabel"
			Grid.Row="1"
			IsHitTestVisible="False"
			BorderThickness="0"
			TextWrapping="Wrap"
			AcceptsReturn="True"
			IsReadOnly="True"
			Height="150"
			Margin="10"
			FontSize="15"
			Background="Transparent"
			Foreground="White"
		></TextBox>
		
		<Button
    		HorizontalContentAlignment="Center"
    		VerticalContentAlignment="Center"
			FontSize="20"
			Content="Close"
			Width="100"
			Height="60"
			HorizontalAlignment="Center"
			Background="Gray"
			Foreground="White"
			Margin="0,15"
			Click="CloseWindow"
			Grid.Row="3">
		</Button>
	</Grid>
</Window>
